#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>
#include "keys_de.h" // or your language file

/ {
    chosen { zmk,physical-layout = &default_layout; };
};

/ {
    behaviors {
        HRShiftR: HRShiftR {
            compatible = "zmk,behavior-hold-tap";
            label = "HRSHIFTR";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            hold-while-undecided;
            hold-trigger-key-positions = <1 2 3 4 5 15 16 17 18 19 29 30 31 32 33 0 1 2 3 4 5 14 15 16 17 18 19 28 29 30 31 32 33 0 1 2 3 4 5 6 14 15 16 17 18 19 20 28 29 30 31 32 33 40 41 42>;
            hold-trigger-on-release;
        };

        HRShiftL: HRShiftL {
            compatible = "zmk,behavior-hold-tap";
            label = "HRSHIFTL";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            hold-while-undecided;
            hold-trigger-on-release;
            hold-trigger-key-positions = <7 8 9 11 12 13 21 22 23 24 25 26 27 34 35 36 37 38 39 43 44 45 10>;
        };

        HRR: HRR {
            compatible = "zmk,behavior-hold-tap";
            label = "HRR";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            hold-while-undecided;
            hold-trigger-key-positions = <1 2 3 4 5 15 16 17 18 19 29 30 31 32 33 0 1 2 3 4 5 14 15 16 17 18 19 28 29 30 31 32 33 0 1 2 3 4 5 6 14 15 16 17 18 19 20 28 29 30 31 32 33 40 41 42>;
            hold-trigger-on-release;
            flavor = "tap-preferred";
        };

        HRL: HRL {
            compatible = "zmk,behavior-hold-tap";
            label = "HRL";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            hold-while-undecided;
            hold-trigger-on-release;
            hold-trigger-key-positions = <7 8 9 11 12 13 21 22 23 24 25 26 27 34 35 36 37 38 39 43 44 45 10>;
            flavor = "tap-preferred";
        };

        HMbtn: HMbtn {
            compatible = "zmk,behavior-hold-tap";
            label = "HMBTN";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <400>;
            flavor = "tap-preferred";
        };

        customExQu: customExQu {
            compatible = "zmk,behavior-mod-morph";
            label = "CUSTOMEXQU";
            #binding-cells = <0>;
            bindings = <&kp LS(DE_N1)>, <&kp LS(DE_ESZETT)>;

            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        customPiBack: customPiBack {
            compatible = "zmk,behavior-mod-morph";
            label = "CUSTOMPIBACK";
            bindings = <&kp DE_BACKSLASH>, <&kp DE_PIPE>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        paren_lr: paren_lr {
            compatible = "zmk,behavior-mod-morph";
            label = "PAREN_LR";
            #binding-cells = <0>;
            bindings = <&kp LS(DE_N8)>, <&kp LS(DE_N9)>;

            mods = <(MOD_LSFT|MOD_RSFT)>;
        };
    };

    combos {
        compatible = "zmk,combos";

        Layer3 {
            bindings = <&mo 3>;
            key-positions = <41 44>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "QWERTZ";

            // --------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |  MUTE |  PP   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |  LALT |  RALT |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |               |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |               | ENT | RSE  | ALT |

            bindings = <
&kp ESC    &kp Q                   &kp W           &kp E              &kp R          &kp T      &trans  &trans  &kp DE_Z  &HMbtn DE_U_UMLAUT U  &HMbtn DE_A_UMLAUT I  &HMbtn DE_O_UMLAUT DE_O  &HMbtn DE_ESZETT DE_P          &kp BSPC
&kp TAB    &HRShiftL LEFT_SHIFT A  &HMbtn LCTRL S  &HMbtn LEFT_GUI D  &HMbtn LALT F  &kp G      &trans  &trans  &kp H     &HMbtn RIGHT_ALT J    &HMbtn RCMD K         &HMbtn LCTRL L           &HRShiftR RIGHT_SHIFT DE_PIPE  &customExQu
&kp LSHFT  &kp DE_Y                &kp X           &kp C              &kp V          &kp B                      &kp N     &kp M                 &kp DE_COMMA          &kp DE_PERIOD            &kp DE_MINUS                   &paren_lr
                                                   &kp LGUI           &mo 1          &kp SPACE                  &kp RET   &mo 2                 &kp RALT
            >;
        };

        lower_layer {
            display-name = "NUMBER";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5    |  LCTRL | RCTRL |  6  |  7  |  8  |  9  |  0  | BSPC |
            // | CTRL | BT1 | BT2 | BT3 | BT4 | BT5   |  LALT  | RALT  | LFT | DWN |  UP | RGT |     |      |
            // | SHFT | BTCR| RGB | RST | BOOT| Unlock|        |       |     |     |     |     |     |      |
            //                    | GUI |     | SPC   |        | ENT   |     | ALT |

            bindings = <
&kp ESC    &kp DE_PLUS   &kp N7  &kp N8    &kp N9  &kp DE_SLASH     &trans  &trans  &trans            &kp PAGE_UP             &kp UP        &kp PAGE_DOWN    &trans                              &kp BSPC
&kp TAB    &kp DE_MINUS  &kp N4  &kp N5    &kp N6  &kp DE_ASTERISK  &trans  &trans  &kp C_PLAY_PAUSE  &HMbtn LALT LEFT_ARROW  &kp DOWN      &kp RIGHT        &HRShiftR RIGHT_SHIFT C_PLAY_PAUSE  &kp C_BRI_UP
&kp LSHFT  &kp N0        &kp N1  &kp N2    &kp N3  &kp DE_EQUAL                     &kp C_PREV        &kp C_NEXT              &kp C_VOL_DN  &kp C_VOLUME_UP  &kp C_MUTE                          &kp C_BRI_DEC
                                 &kp LGUI  &trans  &kp SPACE                        &kp LALT          &trans                  &kp SPACE
            >;
        };

        sym {
            // -------------------------------------------------------------------------------
            // |   ß  |  €  |  #  |  [  |  ]  |  !  |   |  ?  |  {  |  }  |  *  |  /  |   \  |
            // |   ^  |  $  |  `  |  '  |  =  |  &  |   |  "  |  (  |  )  |  +  | "|" |      |
            // |   °  |  §  |  <  |  >  |     |  %  |   |  @  |     |  ;  |  :  |  _  |   ~  |
            //                    | SYM | BCK |     |   | ENT | SPC |     |
                        bindings = <
&kp DE_SHARP_S    &kp DE_EURO     &kp DE_HASH    &kp DE_LBKT   &kp DE_RBKT    &kp DE_EXCL         &kp DE_QMARK   &kp DE_LEFT_BRACE   &kp DE_RIGHT_BRACE   &kp DE_STAR    &kp DE_FSLH    &kp DE_BSLH
&kp DE_CARET      &kp DE_DOLLAR   &kp DE_GRAVE   &kp DE_SQT    &kp DE_EQUAL   &kp DE_AMPS         &kp DE_DQT     &kp DE_LPAR         &kp DE_RPAR          &kp DE_PLUS    &kp DE_PIPE    &none
&kp DE_DEG        &kp DE_SECT     &kp DE_LT      &kp DE_GT     &none          &kp DE_PRCNT        &kp DE_AT      &none               &kp DE_SEMI          &kp DE_COLON   &kp DE_UNDER   &kp DE_TILDE
                                                &trans        &trans         &none               &trans         &trans              &none
                        >;
                };

        raise_layer {
            display-name = "CODE";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  | LCTRL | RCTRL |  ^  |  &  |  *  |  (  |  )  | BSPC |
            // | CTRL |     |     |     |     |     |  LALT | RALT  |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |               |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |               | ENT |     | ALT |

            bindings = <
&kp TAB    &kp EXCL            &kp AT               &kp HASH        &kp DLLR     &kp PRCNT     &trans  &trans  &kp CARET  &kp AMPS   &kp DE_LEFT_PARENTHESIS  &kp DE_RIGHT_PARENTHESIS  &kp DE_ASTERISK  &kp BSPC
&kp LCTRL  &kp DE_EXCLAMATION  &kp DE_QUESTION      &kp DE_AT_SIGN  &kp DE_EURO  &kp DE_TILDE  &trans  &trans  &kp MINUS  &kp EQUAL  &kp DE_LEFT_BRACKET      &kp DE_RIGHT_BRACKET      &kp BSLH         &kp GRAVE
&kp LSHFT  &kp DE_LESS_THAN    &kp DE_GREATER_THAN  &trans          &kp DE_PIPE  &trans                        &kp UNDER  &kp PLUS   &kp DE_LEFT_BRACE        &kp DE_RIGHT_BRACE        &kp PIPE         &kp TILDE
                                                    &kp LGUI        &trans       &kp SPACE                     &kp RET    &trans     &kp RALT
            >;
        };

        extra_layer_1 {
            display-name = "SETTINGS";
            bindings = <
&trans  &trans           &trans           &trans           &trans           &trans           &trans  &trans  &sys_reset    &bootloader   &studio_unlock  &trans        &trans        &trans
&trans  &rgb_ug RGB_HUD  &rgb_ug RGB_HUI  &rgb_ug RGB_BRD  &rgb_ug RGB_BRI  &rgb_ug RGB_TOG  &trans  &trans  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2    &bt BT_SEL 3  &bt BT_SEL 4  &trans
&trans  &trans           &rgb_ug RGB_SAD  &rgb_ug RGB_SAI  &trans           &trans                           &trans        &trans        &trans          &trans        &bt BT_CLR    &trans
                                          &trans           &trans           &trans                           &trans        &trans        &trans
            >;
        };

        extra_layer_2 {
            display-name = "EXTRA 2";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                  &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans                  &trans  &trans  &trans
            >;
        };

        extra_layer_3 {
            display-name = "EXTRA 3";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                  &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans                  &trans  &trans  &trans
            >;
        };

        extra_layer_4 {
            display-name = "EXTRA 4";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                  &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans                  &trans  &trans  &trans
            >;
        };

        extra_layer_5 {
            display-name = "EXTRA 5";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                  &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans                  &trans  &trans  &trans
            >;
        };

        extra_layer_6 {
            display-name = "EXTRA 6";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                  &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans                  &trans  &trans  &trans
            >;
        };
    };
};
